N2

#include <iostream>
#include <math.h>


using namespace std;

int main()
{
    float A,B,C,AC,BC,y;
    cout<<" введите A ";
    cin>>A;
    cout<<" введите B ";
    cin>>B;
    cout<<" введите C ";
    cin>>C;
    AC=abs(A-C);
    cout<<"AC="<<AC;
     BC=abs(B-C);
    cout<<" "<<"BC="<<AC; 
    y= AC+BC;
    cout<<" "<<"сумм="<<y;
    
    
    
  

    return 0;
}


N3
#include <iostream>
#include <math.h>
#include <stdio.h>

using namespace std;

int main()
{
    float A,B,C,AC,BC,y;
    cout<<" введите A ";
    cin>>A;
    cout<<" введите B ";
    cin>>B;
    cout<<" введите C ";
    cin>>C;
    AC=abs(A-C);
    cout<<"AC="<<AC;
     BC=abs(B-C);
    cout<<" "<<"BC="<<AC; 
    y= AC*BC;
    cout<<" "<<"произведение AC и BC="<<y;
    
    
    
  

    return 0;
}


N5
#include <iostream>
#include <math.h>
#include <stdio.h>

using namespace std;

int main()
{
    float x1,x2,y1,y2,x3,y3,P,S,a,b,c,e;
    cout<<" введите x1 y1 ";
    cin>>x1>>y1;
    cout<<" введите x2 y2 ";
    cin>>x2>>y2;
    cout<<" введите x3 y3 ";
    cin>>x3>>y3;
    a=sqrt( (pow(x2-x1,2) )+ ( pow(y2-y1,2) ) );
    b=sqrt( (pow(x3-x2,2) )+ ( pow(y3-y2,2) ) );
    c=sqrt( (pow(x3-x1,2) )+ ( pow(y3-y1,2) ) );
    
    P=a+b+c;
    cout<<" "<<"P="<<P;
    e=P/2;
    S=sqrt(e*(e-a)*(e-b)*(e-c));
    cout<<" "<<"S="<<S;
    return 0;
}
N4
#include <iostream>
#include <math.h>


using namespace std;

int main()
{
    float x1,x2,y1,y2,a,S,P;
    cout<<" введите x1 y1 ";
    cin>>x1>>y1;
    cout<<" введите x2 y2";
    cin>>x2>>y2;
    P=2*(sqrt( (pow(x2-x1,2) )+ ( pow(y2-y1,2) ) ) );
    cout<<" "<<"P="<<P;
    S=abs(x2-x1)*abs(y2-y1);
    cout<<" "<<"S="<<S;
    
  

    return 0;
}
